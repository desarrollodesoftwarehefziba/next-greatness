generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model CitaMedica {
  id          Int      @id @default(autoincrement())
  fecha       DateTime
  nombre      String
  telefono    String
  medico      Medico   @relation(fields: [medicoId], references: [id])
  medicoId    Int
  createdAt   DateTime @default(now())

  @@index([medicoId, fecha], name: "cita_fecha_index")
}

model Medico {
  id           Int             @id @default(autoincrement())
  nombre       String
  especialidad String
  biografia    String?
  horarios     Disponibilidad[]
  citas        CitaMedica[]
}

model Disponibilidad {
  id          Int      @id @default(autoincrement())
  medicoId    Int
  medico      Medico   @relation(fields: [medicoId], references: [id])
  diaSemana   String   // Puedes usar un string o enum para representar el d√≠a de la semana
  horaInicio  DateTime
  horaFin     DateTime

  @@index([medicoId, diaSemana], name: "disponibilidad_medico_dia_index")
}
